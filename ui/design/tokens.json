{
  "meta": {
    "name": "MinaDent iOS26+ Design System",
    "version": "1.0.0",
    "editable": true
  },
  "color": {
    "bg": "#0B0F14",
    "surface": "#111827",
    "surface2": "#0F172A",
    "text": "#E5E7EB",
    "muted": "#9CA3AF",
    "primary": "#3B82F6",
    "secondary": "#FBBF24",
    "success": "#22C55E",
    "danger": "#EF4444",
    "outline": "rgba(255,255,255,0.14)"
  },
  "radius": { "sm": 10, "md": 16, "lg": 22, "xl": 28 },
  "shadow": {
    "soft": "0 10px 30px rgba(0,0,0,0.35)",
    "card": "0 12px 40px rgba(0,0,0,0.45)"
  },
  "space": { "xs": 6, "sm": 10, "md": 14, "lg": 18, "xl": 24, "2xl": 32 },
  "font": {
    "family": "system-ui, -apple-system, Segoe UI, Roboto, Arial",
    "size": { "sm": 13, "base": 15, "lg": 17, "xl": 20, "2xl": 26 },
    "weight": { "regular": 400, "medium": 500, "semibold": 600, "bold": 700 }
  },
  "motion": {
    "reducedMotionRespect": true,
    "dur": { "fast": 140, "base": 220, "slow": 360 },
    "easing": {
      "iosSpringLike": "cubic-bezier(0.2, 0.8, 0.2, 1)",
      "gentle": "cubic-bezier(0.25, 1, 0.3, 1)"
    }
  },
  "icon": {
    "sizePx": 32,
    "style": "multicolor-3d-no-frame-meaningful-motion",
    "format": ["svg", "lottie-json"],
    "noJiggleRule": "animation must describe meaning (not simple shake/bounce only)"
  }
}

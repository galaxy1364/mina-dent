{
  "name": "mina-dent",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "dotenv": "^17.2.3",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "dev": "concurrently -k -n api,web \"npm -w apps/api run dev\" \"npm -w apps/web run dev\"",
    "build": "npm run -ws build",
    "typecheck": "npm run -ws typecheck",
    "test": "npm run -ws test",
    "ci:smoke": "node ./scripts/ci-smoke.mjs",
    "lockpack:refresh": "node ./scripts/lockpack-refresh.mjs",
    "lint": "npm -w apps/api run lint"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0"
  },
  "overrides": {
    "tmp": "0.2.4",
    "glob": "10.5.0"
  }
}

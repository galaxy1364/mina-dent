{
  "name": "@mina/api",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "node dist/main.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "node -e \"process.stdout.write('api:test\\n')\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "build:seed": "tsc -p tsconfig.seed.json",
    "db:seed": "npm run build:seed && node dist/seed.js",
    "db:setup": "npm run db:generate && npm run db:push && npm run db:seed"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.10",
    "@nestjs/core": "^10.3.10",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.10",
    "@prisma/client": "^5.19.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/node": "^20.19.27",
    "@types/passport-jwt": "^4.0.1",
    "prisma": "^5.19.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}

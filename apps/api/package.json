{
  "name": "@mina/api",
  "private": true,
  "version": "0.0.0",
  "description": "Mina Dent API",
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "node dist/main.js",
    "db:generate": "npx prisma generate",

services:
  db:
    image: postgres:16
    environment:
      POSTGRES_USER: mina
      POSTGRES_PASSWORD: mina_pass
      POSTGRES_DB: mina_dent
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U mina -d mina_dent"]
      interval: 5s
      timeout: 5s
      retries: 20
